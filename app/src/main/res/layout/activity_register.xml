<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/enterEmailAddress_RegisterPage"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:background="@drawable/custom_edit_text_round"
        android:drawableStart="@drawable/custom_mail_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterPassword_RegisterPage"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/custom_edit_text_round"
        android:drawableStart="@drawable/custom_key_icon"
        android:drawablePadding="12dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/enterEmailAddress_RegisterPage" />

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/custom_edit_text_round"
        android:drawableStart="@drawable/custom_key_icon"
        android:drawablePadding="12dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/enterPassword_RegisterPage" />

    <Button
        android:id="@+id/Register_RegisterPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_48sdp"
        android:background="@drawable/custom_button_round_grey"
        android:textColor="@android:color/darker_gray"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>