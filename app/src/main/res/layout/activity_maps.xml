<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        tools:layout="@android:layout/simple_spinner_dropdown_item" />

    <Button
        android:id="@+id/Add_Safe_Area"
        android:layout_width="@dimen/_90ssp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_200sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_round_white"
        android:textColor="@color/petblue"
        android:text="Add/Edit\nSafe Areas"
        android:visibility="visible" />

    <Button
        android:id="@+id/Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_170sdp"
        android:layout_marginRight="@dimen/_38sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_round_white"
        android:textColor="@color/petblue"
        android:text="Confirm"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_170sdp"
        android:layout_marginLeft="@dimen/_38sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_round_white"
        android:textColor="@color/petblue"
        android:text="Delete"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_215sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_round_white"
        android:textColor="@color/petblue"
        android:text="Exit"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/SingleDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_195sdp"
        android:layout_marginRight="@dimen/_38sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_round_white"
        android:textColor="@color/petblue"
        android:text="Delete"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/SingleCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_195sdp"
        android:layout_marginLeft="@dimen/_38sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_round_white"
        android:textColor="@color/petblue"
        android:text="Cancel"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/Zoom_To_Pets"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_margin="10sp"
        android:background="@drawable/map_style_bg"
        app:srcCompat="@drawable/ic_baseline_pets_24" />

</FrameLayout>