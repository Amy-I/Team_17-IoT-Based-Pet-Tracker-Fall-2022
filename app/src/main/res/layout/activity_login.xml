<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <EditText
        android:id="@+id/enterEmailAddress_LoginPage"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginTop="@dimen/_230sdp"
        android:ems="10"
        android:background="@drawable/custom_edit_text_round"
        android:drawableStart="@drawable/custom_mail_icon"
        android:drawablePadding="12dp"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <EditText
        android:id="@+id/enterPassword_LoginPage"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:ems="10"
        android:background="@drawable/custom_edit_text_round"
        android:drawableStart="@drawable/custom_key_icon"
        android:drawablePadding="12dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/enterEmailAddress_LoginPage"
         />

    <Button
        android:id="@+id/Login_LoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/custom_button_round_grey"
        android:textColor="@android:color/darker_gray"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPassword_LoginPage" />
</androidx.constraintlayout.widget.ConstraintLayout>